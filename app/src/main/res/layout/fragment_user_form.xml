<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="app.igormatos.botaprarodar.presentation.user.userform.UserFormViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollContainerUser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/buttonActionsGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".presentation.user.userform.UserFormFragment">

                <app.igormatos.botaprarodar.common.components.CustomEditText
                    android:id="@+id/userNameCst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:layout_marginTop="24dp"
                    android:hint="@string/user_form_user_name_hint"
                    android:inputType="textPersonName"
                    android:label="@string/user_form_user_name_label"
                    app:errorMessage="@{`add_user_invalid_name`}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/perfilPictureCpp"
                    app:textCaptured="@{viewModel.userCompleteName}"
                    app:textValue="@={viewModel.userCompleteName}" />


                <app.igormatos.botaprarodar.common.components.CustomEditText
                    android:id="@+id/userAdressCet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:layout_marginTop="24dp"
                    android:hint="@string/user_form_user_adrees_hint"
                    android:inputType="textPostalAddress"
                    android:label="@string/user_form_user_adrees_label"
                    app:errorMessage="@{`add_user_invalid_address`}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userNameCst"
                    app:textCaptured="@{viewModel.userAddress}"
                    app:textValue="@={viewModel.userAddress}" />

                <app.igormatos.botaprarodar.common.components.CustomEditText
                    android:id="@+id/userPhoneCet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:layout_marginTop="24dp"
                    android:hint="@string/user_form_user_phone_hint"
                    android:inputType="phone"
                    app:errorMessage="@{`add_user_invalid_telephone`}"
                    android:label="@string/user_form_user_phone_label"
                    android:maxLength="@integer/max_size_user_phone_number"
                    app:layout_constraintEnd_toStartOf="@+id/userFormGuideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userAdressCet"
                    app:textCaptured="@{viewModel.userTelephone}"
                    app:textValue="@={viewModel.userTelephone}" />

                <app.igormatos.botaprarodar.common.components.CustomDatePicker
                    android:id="@+id/userBirthdayCet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_large"
                    android:hint="@string/user_form_user_birthday_hint"
                    android:label="@string/user_form_user_birthday_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/userFormGuideline"
                    app:layout_constraintTop_toBottomOf="@id/userAdressCet"
                    app:textValue="@{viewModel.userBirthday}" />


                <app.igormatos.botaprarodar.common.components.CustomPicturePick
                    android:id="@+id/perfilPictureCpp"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:src="@drawable/ic_baseline_add_a_photo"
                    android:text="@string/user_form_user_perfil_picture_label"
                    app:imagePathOrUrl="@{viewModel.userImageProfile}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/userFormGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonActionsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:enabled="@{viewModel.isButtonEnabled}"
                android:onClick="@{() -> viewModel.navigateToNextStep()}"
                android:text="@string/action_next_registration"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cancelButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/action_cancel"
                android:textSize="@dimen/text_size_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/saveButton"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
