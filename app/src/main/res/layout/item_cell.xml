<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:id="@+id/cellContainer"
                                                   android:paddingTop="16dp"
                                                   android:paddingBottom="16dp"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="63dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/cellImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cellTitle"
            app:layout_constraintTop_toTopOf="@id/cellImageView"
            app:layout_constraintStart_toEndOf="@id/cellImageView"
            android:layout_marginStart="8dp" android:textSize="24sp"
            android:maxLength="20"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cellSubtitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cellTitle"
            app:layout_constraintStart_toEndOf="@id/cellImageView"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>