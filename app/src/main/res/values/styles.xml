<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="actionBarTheme">@style/ActionBar</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_image_bg</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.WhiteEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeWithActionbar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="actionBarTheme">@style/ActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:editTextColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="colorControlNormal">@color/dark_gray</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:titleTextStyle">@color/grey</item>
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/dark_gray</item>
    </style>

    <style name="bprButton" parent="Widget.AppCompat.Button.Colored"></style>

    <style name="bprButton.image" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">#000</item>
    </style>

    <style name="TextLabel">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="SubtitleExpandedCardConfirmation" parent="TitleExpandedCardConfirmation">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TitleExpandedCardConfirmation">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearanceToolbar" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabelSuccessfullyRegistered" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#515151</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name = "android:shadowColor">#40000000 </item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:translationY">-4.59sp</item>
    </style>


</resources>
